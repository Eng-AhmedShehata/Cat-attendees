<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".qrCode.generator.GeneratorActivity">


    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/et_name"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Name"/>

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/et_level"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Level"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <Button
           android:layout_marginTop="8dp"
           android:id="@+id/btn_generate"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Generate new"/>

       <Button
           android:layout_marginTop="8dp"
           android:id="@+id/btn_generate_save"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Generate and save"/>

       <Button
           android:layout_marginTop="8dp"
           android:id="@+id/btn_generate_save_share"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Generate and save and share"/>


   </LinearLayout>


    <ImageView
        android:layout_marginTop="12dp"
        android:id="@+id/iv_qrcode"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="50dp"
        android:text="Generate new"/>



</LinearLayout>